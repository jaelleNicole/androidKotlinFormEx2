<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
    >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    >

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/landLinePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="landline_phone"

        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/mobilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="mobile_phone"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="birthday_older_than_18"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="password"
                app:color_style="@style/PersoTextInputLayout.EditText.Blue"
        />

        <fr.sebastienlaunay.formulaire.PersoTextInputLayout
                android:id="@+id/passwordConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                tools:layout_height="30dp"
                tools:background="@color/colorPrimary"

                app:input_type="confirm_password"
        />

        <CheckBox
                android:id="@+id/checkBox"
                android:text="Ce checkbox doit être coché"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <Button
                android:id="@+id/btnValidateForm"
                android:text="Envoyer"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/resultat"
                tools:text="Le formulaire est VALIDE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
        />

    </LinearLayout>
</ScrollView>